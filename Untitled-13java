public class Equipa{
    private String nome;
    private ArrayList<Jogador> jogadores; 

public Equipa(string nome){
    this.nome=nome;
    ArrayList<Jogador> jogadores = new ArrayList<Jogador>();
}

public void add(Jogador j){
    jogadores.add(j);
}

public void remove(int i){
    jogadores.remove(i-1);
}

public int numJog (){
    return (jogadores.size);
}

public boolean pertence(String s){
    jogadores.forEach(if Jogador.getnome().equals(s) return true);
    return false;
}


}